<h1>Listando Artigos</h1>
<%= link_to 'Novo artigo', new_article_path %>

<table>
  <tr>
    <th>Títulos</th>
    <th>Textos</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Ver', article_path(article) %></td>
      <td><%= link_to 'Editar', edit_article_path(article) %></td>
      <td><%= link_to 'Apagar', article_path(article),
              method: :delete,
              data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
  <% end %>
</table>